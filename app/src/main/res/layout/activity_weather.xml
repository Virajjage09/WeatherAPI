<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.viraj_assignment.mywheatherapp.weather">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Your City"
                android:textColor="@color/colortext"
                android:textSize="@dimen/header_text" />

            <ImageView
                android:id="@+id/imgWeatherType"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/txtCityName"
                android:layout_marginTop="10dp"
                android:src="@drawable/cloudy" />

            <TextView
                android:id="@+id/txtTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgWeatherType"
                android:layout_marginTop="10dp"
                android:text="30"
                android:textColor="@color/colortext"
                android:textSize="@dimen/large_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTemperature"
                android:layout_marginTop="10dp"
                android:text="2:15PM"
                android:textColor="@color/colortext"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:max="100" />


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="27"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day1"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/Extra_small_text" />

                    <ImageView
                        android:id="@+id/imgDay1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/sunny" />

                    <TextView
                        android:id="@+id/txtTempDay1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/Extra_small_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="27"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day2"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/Extra_small_text" />

                    <ImageView
                        android:id="@+id/imgDay2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/cloudy" />

                    <TextView
                        android:id="@+id/txtTempDay2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/Extra_small_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day3"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/Extra_small_text" />

                    <ImageView
                        android:id="@+id/imgDay3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/sunny" />

                    <TextView
                        android:id="@+id/txtTempDay3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/Extra_small_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/day4"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/Extra_small_text" />

                    <ImageView
                        android:id="@+id/imgDay4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/cloud" />

                    <TextView
                        android:id="@+id/txtTempDay4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26"
                        android:textColor="@color/colortext"
                        android:textSize="@dimen/Extra_small_text" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
